{
  "name": "simple-todos",
  "private": true,
  "scripts": {
    "start": "meteor run",
    "lint": "eslint ./imports"
  },
  "eslintConfig": {
    "parser": "babel-eslint",
    "parserOptions": {
      "allowImportExportEverywhere": true
    },
    "plugins": [
      "meteor"
    ],
    "extends": [
      "airbnb",
      "plugin:meteor/recommended"
    ],
    "settings": {
      "import/resolver": "meteor"
    },
    "env": {
      "browser": true,
      "node": true,
      "meteor": true,
      "es6": true
    },
    "globals": {
      "cordova": true,
      "_gs": true,
      "ga": true
    },
    "rules": {
      "react/jsx-filename-extension": [
        1,
        {
          "extensions": [
            ".js",
            ".jsx"
          ]
        }
      ],
      "no-underscore-dangle": [
        "error",
        {
          "allow": [
            "_id",
            "_ensureIndex",
            "_verifyEmailToken",
            "_resetPasswordToken",
            "_name",
            "_execute",
            "_constructCsp",
            "__"
          ]
        }
      ],
      "import/extensions": 0,
      "import/no-extraneous-dependencies": 0,
      "import/no-absolute-path": 0,
      "import/prefer-default-export": 0,
      "react/forbid-prop-types": 0,
      "react/require-default-props": 0,
      "react/prop-types": 0,
      "react/jsx-no-bind": 0,
      "jsx-a11y/href-no-hash": "off",
      "jsx-a11y/anchor-is-valid": [
        "warn",
        {
          "aspects": [
            "invalidHref"
          ]
        }
      ],
      "no-console": 0,
      "comma-dangle": 0,
      "no-param-reassign": 0,
      "global-require": 0,
      "consistent-return": 0,
      "meteor/audit-argument-checks": 0,
      "array-callback-return": 0,
      "no-case-declarations": 0,
      "no-plusplus": 0,
      "no-bitwise": 0,
      "class-methods-use-this": 0,
      "jsx-a11y/no-static-element-interactions": 0,
      "react/prefer-stateless-function": 0,
      "react/sort-comp": 0,
      "max-len": 0
    }
  },
  "devDependencies": {
    "babel-eslint": "^8.0.2",
    "babel-plugin-transform-decorators-legacy": "^1.3.4",
    "babel-preset-stage-0": "^6.24.1",
    "babel-runtime": "^6.26.0",
    "eslint": "^4.11.0",
    "eslint-config-airbnb": "^15.1.0",
    "eslint-import-resolver-meteor": "^0.4.0",
    "eslint-loader": "^1.9.0",
    "eslint-plugin-import": "^2.8.0",
    "eslint-plugin-jsx-a11y": "git+https://dovydas_kukalis@bitbucket.org/dovydas_kukalis/eslint-plugin-jsx-a11y.git",
    "eslint-plugin-meteor": "^4.1.6",
    "eslint-plugin-react": "^7.4.0"
  },
  "dependencies": {
    "babel-runtime": "^6.26.0",
    "classnames": "^2.2.5",
    "meteor-node-stubs": "^0.3.2",
    "react": "^16.1.1",
    "react-dom": "^16.1.1",
    "react-router": "^3.2.0",
    "simpl-schema": "^1.3.0",
    "prop-types": "^15.6.0"
  }
}
